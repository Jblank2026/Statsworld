// Simple student tracking models
model Student {
  id        String   @id @default(cuid())
  netId     String   @unique  // UTK NetID (e.g., "jsmith42")
  name      String?  // Optional student name
  email     String?  // Optional UTK email
  
  // Track visits and interactions
  visits    StudentVisit[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([netId])
}

// Track when students visit JakesWorld
model StudentVisit {
  id        String   @id @default(cuid())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  // Visit details
  pagePath  String   // What page they visited (e.g., "/chapters/4/interpreting-summary-output")
  pageTitle String?  // Title of the page
  action    String   // What they did ("login", "page_view", "click", "explanation_view")
  element   String?  // What they clicked on (e.g., "intercept", "slope")
  value     String?  // Any associated value
  
  // Session info
  sessionId String?  // Browser session ID
  userAgent String?  // Browser info
  
  visitedAt DateTime @default(now())
  
  @@index([studentId, visitedAt])
  @@index([pagePath])
}
